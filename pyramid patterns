#include<iostream>
using namespace std;

int main(){
    int n;
    cout<<"enter n = ";
    cin>>n;
    for(int i=1 ; i<=n ; i++){
        for(int j=i ; j<=n ; j++){
            cout<<" ";
        }
        for(int k=1 ; k<2*i ; k++){
            cout<<"*";
        }
        cout<<endl;
    }

    cout<<endl;
    cout<<"//////////////////////////////"<<endl;
    cout<<endl;

    for(int i=n ; i>=1 ; i--){
        for(int j=i ; j<=n ; j++){
            cout<<" ";
        }
        for(int k=1 ; k<2*i ; k++){
            cout<<"*";
        }
        cout<<endl;
    }


    return 0;
}
